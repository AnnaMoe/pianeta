<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Complete your booking</h3>
        <%= simple_form_for [@booking.planet, @booking] do |f| %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :email %>
          <%= f.input :phone_number %>
          <%= f.input :credit_card %>
          <%= f.button :button, "Confirm", class: "button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>