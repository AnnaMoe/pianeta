  
<div class="banner">
  <h1 class="glow-header">Galaxy Far, Far Away? Quick Trip to Mars?<br>
    Pianeta has you covered.</h1>
  <div>
    <div class="inner-form">
      <div class="row">
      </div>
      <div class="row">
        <div class="col">
          <input type="text" class="form-control" placeholder="Check-in">
        </div>
        <div class="col">
          <input type="text" class="form-control" placeholder="Check-out">
        </div>
        <div class="col">
          <input type="text" class="form-control" placeholder="Space Travellers">
        </div>
        <div class="col">
          <%= form_tag planets_path, method: :get do %>
            <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a planet",
            type: "text"  
          %>
          </div>
          <div class="col">
            <%=  button_tag "Search", type: 'submit', class:  "btn btn-flat" do %>
            <i class="fas fa-search"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
<br>
<div class= "container-sm">
<h2>Featured Planets:</h2>
</div>
<br>

 <div class="row align-items-center ">
 <div class="col">
  <% @planets.each do |planet| %>
    <% if planet.photos.attached? %>
      <%= link_to planet_path(planet), class:'text-decoration-none' do %>
        <div class="card-category-planets">
          <%= cl_image_tag planet.photos.first.key, class: 'planet-images' %>
          <div class="card-planets-body">
            <h3 class="card-planet-title"><%= planet.title %></h3>
            <p class="card-planet-description">$<%=planet.price%>/ per night</p>
      <% end %>       
    </div>
    </div>
  <% end %>
<% end %>
</div>
